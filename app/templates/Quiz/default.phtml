<h2><a href="{plink Quiz:}">Quiz:</a></h2>

{if isset($new_form)}
	<div class="block">
	{$new_form}
	</div>
{/if}

@{if isset($quiz)}
{snippet quiz}

		{if $quiz['run'] == 0}
			<div id="quiz-countdown">
				Quiz start <strong>{$quiz['datetime_start']|date:'%H:%M:%S - %d.%m.%Y'}</strong>
			</div>
		{/if}

		@{if isset($question)}
	
			@{$question->render()}
	
		@{/if}
	
		@{if isset($chart)}
			{snippet chart}
				{foreach $chart as $u}
				{if $iterator->isFirst()}<ul>{/if}
					<li class="{if $u['user_id'] == $user->getIdentity()->id}user{/if}{if $iterator->isEven()} even{/if}">{$u['email']} : {$u['sum']}</li>
				{if $iterator->isLast()}<ul>{/if}
				{/foreach}
			{/snippet}
		@{/if}

{/snippet}

<script type="text/javascript">
//<![CDATA[

	var quiz_config = {
	{if isset($question)}
		"question" : {
			"id" 	: {$question->id},
			"remaining_time" : {$question->remaining_time},
			"hints"	: {$question->hints},
			"type" 	: {$question->type}
		},
	{/if}
	{if isset($quiz)}
		"quiz" : {$quiz},
	{/if}
		"form" : "qform",
		"url" : {plink Quiz:},
		"hint_url" : {plink Quiz:hint},
		"answer_url" : {plink Quiz:answer},
	 };
//]]>
</script>

@{/if}
