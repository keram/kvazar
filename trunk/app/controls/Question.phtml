<form method="post" action="">	<h4>{$question->title['sk']}</h4>	{if $question->title['en']}		<span class="sub">{$question->title['en']}</span>	{/if}		{if $question->answers_count > 1}		{foreach $question->answers as $answer}			<div class="answer">				<input type="checkbox" name="answer[]" value="{$answer['id']}" id="answer-{$answer['id']}" />				<label for="answer-{$answer['id']}">{$answer['value']}</label>			</div>					{/foreach}	{else}		<input type="text" name="answer" value="" class="answer text" />	{/if}		<input type="submit" name="action" value="Next" />	</form>